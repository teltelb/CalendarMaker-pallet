<Window x:Class="CalendarMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CalendarMaker.ViewModels"
        xmlns:views="clr-namespace:CalendarMaker.Views"
        xmlns:conv="clr-namespace:CalendarMaker.Converters"
        xmlns:core="clr-namespace:CalendarMaker"
        PreviewKeyDown="MainWindow_PreviewKeyDown"
        Title="Calendar Maker" Width="1400" Height="900">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <!-- 左側のプレビュー領域。ズームやパンの挙動を調整したい場合はここを編集。 -->
        <DockPanel Grid.Column="0" Background="#ECEFF1">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                <TextBlock Text="ページ:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <Button Content="←"
                        Width="34"
                        Margin="0,0,6,0"
                        ToolTip="前の月へ"
                        Click="PrevPage_Click"/>
                <ComboBox Width="160" ItemsSource="{Binding Pages}" SelectedIndex="{Binding SelectedPageIndex}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Month}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Content="→"
                        Width="34"
                        Margin="6,0,0,0"
                        ToolTip="次の月へ"
                        Click="NextPage_Click"/>

                <TextBlock Text="  ズーム:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <Slider x:Name="ZoomSlider" Minimum="0.1" Maximum="2.0" Value="0.70" Width="200"/>
            </StackPanel>

            <ScrollViewer x:Name="PreviewScroll"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="#ECEFF1"
                          PreviewMouseWheel="PreviewScroll_PreviewMouseWheel"
                          PreviewMouseLeftButtonDown="PreviewScroll_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="PreviewScroll_PreviewMouseMove"
                          PreviewMouseLeftButtonUp="PreviewScroll_PreviewMouseLeftButtonUp"
                          MouseLeave="PreviewScroll_MouseLeave"
                          LostMouseCapture="PreviewScroll_LostMouseCapture">
                <Grid>
                    <Grid x:Name="ZoomHost"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Margin="16"
                          UseLayoutRounding="True" SnapsToDevicePixels="True"
                          RenderOptions.BitmapScalingMode="HighQuality">
                        <Grid.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ElementName=ZoomSlider, Path=Value}"
                                            ScaleY="{Binding ElementName=ZoomSlider, Path=Value}"/>
                        </Grid.LayoutTransform>

                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="4" Opacity="0.35"/>
                        </Grid.Effect>

                        <!-- DIPサイズのページを1枚だけ表示。枠線や影の雰囲気はこの中で調整。 -->
                        <Border Width="{x:Static core:PageSpec.PageDipW}"
                                Height="{x:Static core:PageSpec.PageDipH}"
                                BorderBrush="#9AA0A6" BorderThickness="1" Background="White">
                            <Grid>
                                <views:MonthPageView DataContext="{Binding CurrentPage}"/>
                                <Rectangle IsHitTestVisible="False" Stroke="#55FF4081" StrokeThickness="1"
                                           StrokeDashArray="4 3" Margin="48,48,48,48"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </DockPanel>

        <!-- 右側の設定パネル。タブの追加・削除はこの中で行う。 -->
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#F6F7F9">
            <Border Padding="12"
                    Background="White"
                    BorderBrush="#DADCE0"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="適用"
                                Width="110"
                                Padding="14,6"
                                Click="Rebuild_Click"/>
                        <TextBlock Text="変更をプレビューに反映します。"
                                   Foreground="#555"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <TabControl BorderThickness="0"
                                Background="Transparent">
                        <TabItem Header="基本設定">
                            <StackPanel Margin="8">
                                <TextBlock Text="基本設定" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <TextBlock Text="開始月と開始曜日を設定します。プレビューは左側に反映されます。"
                                           Foreground="#555"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="開始月" VerticalAlignment="Center" Margin="0,0,8,8"/>
                                    <DatePicker Grid.Row="0" Grid.Column="1"
                                                SelectedDate="{Binding StartMonthDateTime, Mode=TwoWay}"
                                                Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="開始曜日" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1"
                                              ItemsSource="{Binding StartWeekdayOptions}"
                                              SelectedItem="{Binding Settings.StartWeekday}"/>
                                </Grid>
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="月別画像">
                            <StackPanel Margin="8">
                                <TextBlock Text="月別画像（開始月から順）" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="各月の上部に表示する画像を設定します。画像ファイルをドラッグ&amp;ドロップするとまとめて設定できます。行同士をドラッグ&amp;ドロップすると画像だけ別の月へ移動できます。行をダブルクリックすると切り抜き位置を調整できます（3:2）。"
                                           Foreground="#555"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,12"/>

                                <DataGrid x:Name="MonthImagesGrid"
                                          ItemsSource="{Binding ImageRows}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          AllowDrop="True"
                                          PreviewMouseLeftButtonDown="MonthImagesGrid_PreviewMouseLeftButtonDown"
                                          PreviewMouseMove="MonthImagesGrid_PreviewMouseMove"
                                          PreviewDragOver="MonthImagesGrid_PreviewDragOver"
                                          Drop="MonthImagesGrid_Drop"
                                          MouseDoubleClick="MonthImagesGrid_MouseDoubleClick"
                                          PreviewKeyDown="MonthImagesGrid_PreviewKeyDown"
                                          RowBackground="White"
                                          AlternatingRowBackground="#F6F7F9"
                                          RowHeight="56"
                                          GridLinesVisibility="Horizontal">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="年月日" Binding="{Binding MonthLabel}" Width="90"/>
                                        <DataGridTemplateColumn Header="画像プレビュー" Width="140">
                                            <DataGridTemplateColumn.CellTemplate>
                                                 <DataTemplate>
                                                    <Border Width="120" Height="50" BorderBrush="#CCC" BorderThickness="1" ClipToBounds="True">
                                                        <Border.Background>
                                                            <ImageBrush ImageSource="{Binding Preview}"
                                                                        Viewbox="{Binding CropRect}"
                                                                        ViewboxUnits="RelativeToBoundingBox"
                                                                        Stretch="UniformToFill"/>
                                                        </Border.Background>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="画像名" Binding="{Binding ImageName}" Width="*"/>
                                        <DataGridTemplateColumn Header="操作" Width="210">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Button Content="参照..." Margin="0,0,6,0" Tag="{Binding}" Click="ImageBrowseRow_Click"/>
                                                        <Button Content="↑" Width="30" Margin="0,0,4,0" Tag="{Binding}" Click="ImageUpRow_Click" ToolTip="上へ"/>
                                                        <Button Content="↓" Width="30" Tag="{Binding}" Click="ImageDownRow_Click" ToolTip="下へ"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="記念日">
                            <StackPanel Margin="8">
                                <TextBlock Text="記念日" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <TextBlock Text="追加した記念日は、該当日の枠内に赤文字で表示されます。"
                                           Foreground="#555"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,12"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="日付" VerticalAlignment="Center" Margin="0,0,8,8"/>
                                    <DatePicker Grid.Row="0" Grid.Column="1" x:Name="AnnivDate" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="名称" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="AnnivLabel" VerticalContentAlignment="Center"/>

                                    <Button Grid.RowSpan="2" Grid.Column="2"
                                            Content="追加"
                                            Padding="14,6"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Click="AddAnniv_Click"/>
                                </Grid>

                                <DataGrid ItemsSource="{Binding Settings.Anniversaries}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          RowBackground="White"
                                          AlternatingRowBackground="#F6F7F9"
                                          RowHeight="32"
                                          GridLinesVisibility="Horizontal">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="日付" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="120"/>
                                        <DataGridTextColumn Header="名称" Binding="{Binding Label}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="祝日">
                            <StackPanel Margin="8">
                                <TextBlock Text="祝日" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <TextBlock Text="外部データから祝日を取得します。開始月から12ヶ月分を対象に更新します。"
                                           Foreground="#555"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Button Content="祝日を更新"
                                            Padding="14,6"
                                            Click="RefreshHolidays_Click"/>

                                    <StackPanel Margin="14,0,0,0" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="最終更新: " Foreground="#555"/>
                                            <TextBlock Text="{Binding Settings.HolidaysLastFetched, StringFormat={}{0:yyyy-MM-dd HH:mm}, TargetNullValue=未更新}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="データ更新日: " Foreground="#555"/>
                                            <TextBlock Text="{Binding Settings.HolidaysSourceLastModified, StringFormat={}{0:yyyy-MM-dd HH:mm}, TargetNullValue=不明}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <Expander Header="祝日一覧（表示/非表示）" IsExpanded="False">
                                    <DataGrid ItemsSource="{Binding Settings.Holidays}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              RowBackground="White"
                                              AlternatingRowBackground="#F6F7F9"
                                              RowHeight="28"
                                              GridLinesVisibility="Horizontal"
                                              MaxHeight="320">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="日付" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="120"/>
                                            <DataGridTextColumn Header="名称" Binding="{Binding Label}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Expander>
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="出力">
                            <StackPanel Margin="8">
                                <TextBlock Text="出力" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <TextBlock Text="必要に応じて適用してから、PDF出力や印刷を行ってください。" Foreground="#555" TextWrapping="Wrap" Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="適用" Width="110" Click="Rebuild_Click"/>
                                    <Button Content="PDF出力" Width="110" Margin="8,0,0,0" Click="ExportPdf_Click"/>
                                    <Button Content="印刷" Width="110" Margin="8,0,0,0" Click="Print_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>






