<Window x:Class="CalendarMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CalendarMaker.ViewModels"
        xmlns:views="clr-namespace:CalendarMaker.Views"
        xmlns:conv="clr-namespace:CalendarMaker.Converters"
        xmlns:core="clr-namespace:CalendarMaker"
        Title="Calendar Maker" Width="1400" Height="900">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <!-- 左：プレビュー -->
        <DockPanel Grid.Column="0" Background="#ECEFF1">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                <TextBlock Text="ページ:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="160" ItemsSource="{Binding Pages}" SelectedIndex="{Binding SelectedPageIndex}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Month, StringFormat={}{0}月}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="  ズーム:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <Slider x:Name="ZoomSlider" Minimum="0.1" Maximum="2.0" Value="0.70" Width="200"/>
            </StackPanel>

            <ScrollViewer x:Name="PreviewScroll"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="#ECEFF1">
                <Grid>
                    <Grid x:Name="ZoomHost"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Margin="16"
                          RenderTransformOrigin="0.5,0.0"
                          UseLayoutRounding="True" SnapsToDevicePixels="True"
                          RenderOptions.BitmapScalingMode="HighQuality">
                        <Grid.RenderTransform>
                            <ScaleTransform ScaleX="{Binding ElementName=ZoomSlider, Path=Value}"
                                            ScaleY="{Binding ElementName=ZoomSlider, Path=Value}"/>
                        </Grid.RenderTransform>

                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="4" Opacity="0.35"/>
                        </Grid.Effect>

                        <!-- DIPサイズのページを1枚表示 -->
                        <Border Width="{x:Static core:PageSpec.PageDipW}"
                                Height="{x:Static core:PageSpec.PageDipH}"
                                BorderBrush="#9AA0A6" BorderThickness="1" Background="White">
                            <Grid>
                                <views:MonthPageView DataContext="{Binding CurrentPage}"/>
                                <Rectangle IsHitTestVisible="False" Stroke="#55FF4081" StrokeThickness="1"
                                           StrokeDashArray="4 3" Margin="48,48,48,48"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </DockPanel>

        <!-- 右：設定 -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Border Padding="12">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="FrameworkElement">
                            <Setter Property="Margin" Value="0,6,0,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <TextBlock Text="設定" FontWeight="Bold" FontSize="16"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="開始月" Width="70" VerticalAlignment="Center"/>
                        <DatePicker SelectedDate="{Binding StartMonthDateTime, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="開始曜日" Width="70" VerticalAlignment="Center"/>
                        <ComboBox Width="150" ItemsSource="{Binding StartWeekdayOptions}" SelectedItem="{Binding Settings.StartWeekday}"/>
                    </StackPanel>

                    <Separator/>
                    <TextBlock Text="月別画像（開始月から順）" FontWeight="Bold"/>

                    <DataGrid ItemsSource="{Binding ImageRows}"
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              HeadersVisibility="Column" RowHeight="56" GridLinesVisibility="Horizontal" Margin="0,4,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="年月日" Binding="{Binding MonthLabel}" Width="90"/>
                            <DataGridTemplateColumn Header="画像プレビュー" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="120" Height="50" BorderBrush="#CCC" BorderThickness="1" Background="White">
                                            <Image Source="{Binding Preview}" Stretch="Uniform"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="画像名" Binding="{Binding ImageName}" Width="*"/>
                            <DataGridTemplateColumn Header="操作" Width="210">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="参照..." Margin="0,0,6,0" Tag="{Binding}" Click="ImageBrowseRow_Click"/>
                                            <Button Content="↑" Width="30" Margin="0,0,4,0" Tag="{Binding}" Click="ImageUpRow_Click"/>
                                            <Button Content="↓" Width="30" Tag="{Binding}" Click="ImageDownRow_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Separator/>
                    <TextBlock Text="記念日" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <DatePicker x:Name="AnnivDate"/>
                        <TextBox x:Name="AnnivLabel" Width="180"/>
                        <Button Content="追加" Click="AddAnniv_Click"/>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding Settings.Anniversaries}" Height="120" DisplayMemberPath="Label"/>
                    <Separator/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="再生成" Width="100" Click="Rebuild_Click"/>
                        <Button Content="PDF出力" Width="100" Margin="8,0,0,0" Click="ExportPdf_Click"/>
                        <Button Content="印刷" Width="100" Margin="8,0,0,0" Click="Print_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
