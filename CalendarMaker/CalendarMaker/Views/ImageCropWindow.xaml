<Window x:Class="CalendarMaker.Views.ImageCropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="画像の切り抜き"
        Width="900"
        Height="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="ドラッグで切り抜き位置を調整、ホイールで拡大/縮小（3:2固定）"
                   Foreground="#555"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1"
                Background="#111"
                BorderBrush="#333"
                BorderThickness="1"
                CornerRadius="6">
            <Grid x:Name="PreviewHost"
                  ClipToBounds="True"
                  Background="Black"
                  SizeChanged="PreviewHost_SizeChanged"
                  MouseWheel="PreviewHost_MouseWheel"
                  MouseLeftButtonDown="PreviewHost_MouseLeftButtonDown">
                <Image x:Name="PreviewImage"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <Canvas x:Name="OverlayCanvas">
                    <Rectangle x:Name="CropOverlay"
                               Stroke="#FF4081"
                               StrokeThickness="2"
                               Fill="#22FF4081"
                               Cursor="SizeAll"
                               MouseLeftButtonDown="CropOverlay_MouseLeftButtonDown"
                               MouseMove="CropOverlay_MouseMove"
                               MouseLeftButtonUp="CropOverlay_MouseLeftButtonUp"/>
                </Canvas>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="リセット" Padding="14,6" Margin="0,0,8,0" Click="Reset_Click"/>
            <Button Content="キャンセル" Padding="14,6" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="OK" Padding="18,6" IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>

