<UserControl x:Class="CalendarMaker.Views.MonthPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:CalendarMaker.Views"
             xmlns:core="clr-namespace:CalendarMaker"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top image area -->
        <Border x:Name="ImageHost"
                Grid.Row="0"
                Margin="3"
                ClipToBounds="True"
                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource MultiplyConverter}, ConverterParameter=0.6666666667}">
            <Image Source="{Binding ImagePath}"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Border>

        <!-- Header -->
        <Grid Grid.Row="1" Margin="3" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Month}"
                       FontSize="102"
                       FontWeight="Bold"
                       FontFamily="Impact"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding MonthEnglish}" FontSize="40" FontWeight="Bold"/>
                <TextBlock Text="{Binding HeaderEraText}" FontSize="20"/>
            </StackPanel>
        </Grid>

        <!-- Calendar body -->
        <Border Grid.Row="2"
                Margin="3"
                BorderBrush="#888"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Weekday row -->
                <UniformGrid Grid.Row="0" Columns="7" SnapsToDevicePixels="True">
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Sun" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Red" Margin="0,2"/>
                    </Border>
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Mon" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,2"/>
                    </Border>
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Tue" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,2"/>
                    </Border>
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Wed" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,2"/>
                    </Border>
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Thu" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,2"/>
                    </Border>
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Fri" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,2"/>
                    </Border>
                    <Border BorderBrush="#B0B4B9" BorderThickness="1">
                        <TextBlock Text="Sat" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Blue" Margin="0,2"/>
                    </Border>
                </UniformGrid>

                <!-- Day cells -->
                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#B0B4B9"
                                    BorderThickness="1"
                                    Padding="2"
                                    MinHeight="0"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Date.Day}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Margin="0,0,0,2"
                                               FontSize="20">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCurrentMonth}" Value="False">
                                                        <Setter Property="Foreground" Value="#BBBBBB"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Date.DayOfWeek}" Value="{x:Static sys:DayOfWeek.Sunday}"/>
                                                            <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Foreground" Value="#C00"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Date.DayOfWeek}" Value="{x:Static sys:DayOfWeek.Saturday}"/>
                                                            <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Foreground" Value="#06C"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ItemsControl Grid.Row="1"
                                                  ItemsSource="{Binding AnniversaryDisplayLines}"
                                                  Margin="0"
                                                  SnapsToDevicePixels="True">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="0,0,0,2" Margin="0,0,0,2">
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="14"
                                                               Foreground="#C00"
                                                               TextWrapping="Wrap"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               LineHeight="16"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
