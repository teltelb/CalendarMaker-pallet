<UserControl x:Class="CalendarMaker.Views.MonthPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:CalendarMaker.Views"
             xmlns:core="clr-namespace:CalendarMaker"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid Background="White" Margin="3" Width="{x:Static core:PageSpec.PageDipW}" Height="{x:Static core:PageSpec.PageDipH}" SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Preview image -->
        <Border x:Name="ImageHost"
                Grid.Row="0"
                Margin="0,0,0,6"
                ClipToBounds="True"
                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource MultiplyConverter}, ConverterParameter=0.6666666667}">
            <Image Source="{Binding ImagePath}"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Border>

        <!-- Header -->
        <Grid Grid.Row="1" Margin="0,0,0,6" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Month}"
                       FontFamily="Impact"
                       FontSize="102"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding MonthEnglish}" FontSize="40" FontWeight="Bold"/>
                <TextBlock Text="{Binding HeaderEraText}" FontSize="20"/>
            </StackPanel>
        </Grid>

        <!-- Calendar body -->
        <Border Grid.Row="2"
                BorderBrush="#888"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Weekday labels -->
                <ItemsControl Grid.Row="0"
                              ItemsSource="{Binding WeekdayLabels}"
                              AlternationCount="7"
                              SnapsToDevicePixels="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex)}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#B0B4B9" BorderThickness="1" SnapsToDevicePixels="True">
                                <TextBlock Text="{Binding}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0,2">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#222"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=Tag}" Value="0">
                                                    <Setter Property="Foreground" Value="#C00"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=Tag}" Value="6">
                                                    <Setter Property="Foreground" Value="#06C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Day cells -->
                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding Cells}"
                              AlternationCount="42"
                              SnapsToDevicePixels="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex)}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#B0B4B9"
                                    BorderThickness="1"
                                    Padding="2"
                                    MinHeight="0"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Date.Day}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Margin="0,0,0,2"
                                               FontSize="20">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#222"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsHoliday}" Value="True">
                                                        <Setter Property="Foreground" Value="#C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsCurrentMonth}" Value="False">
                                                        <Setter Property="Foreground" Value="#BBBBBB"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Date.DayOfWeek}" Value="{x:Static sys:DayOfWeek.Sunday}"/>
                                                            <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Foreground" Value="#C00"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Date.DayOfWeek}" Value="{x:Static sys:DayOfWeek.Saturday}"/>
                                                            <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Foreground" Value="#06C"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ItemsControl Grid.Row="1"
                                                  ItemsSource="{Binding AnniversaryDisplayLines}"
                                                  Margin="0"
                                                  SnapsToDevicePixels="True">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="0,0,0,2" Margin="0,0,0,2">
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="14"
                                                               Foreground="#C00"
                                                               TextWrapping="Wrap"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               LineHeight="16"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
