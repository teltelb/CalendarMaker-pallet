<Window x:Class="CalendarMaker.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF出力中" WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False">
    <StackPanel Margin="16">
        <TextBlock Text="{Binding StatusText}" Margin="0,0,0,8"/>
        <ProgressBar Width="380" Height="16" Minimum="0" Maximum="100" Value="{Binding Progress}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="キャンセル" Width="90" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
